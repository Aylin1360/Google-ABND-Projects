<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".EditorActivity">

    <!-- Overview category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Overview"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Name field -->
            <EditText
                android:id="@+id/edit_item_name"
                android:hint="product_name"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />

            <!-- Suplier Name field -->
            <EditText
                android:id="@+id/suplier_name"
                android:hint="SuplierName"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/suplier_phone"
                    android:hint="SuplierPhone"
                    android:inputType="number"
                    style="@style/EditorFieldStyle" />

                <Button
                    android:id="@+id/call_button"
                    android:layout_width="40dp"
                    android:text="Call"
                    android:layout_height="40dp"
                    android:layout_marginLeft="180dp" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Price category -->
    <LinearLayout
        android:id="@+id/container_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Price"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2">

            <!-- Price field -->
            <EditText
                android:id="@+id/edit_price"
                android:hint="price"
                android:inputType="number"
                style="@style/EditorFieldStyle" />
            <TextView
                android:id="@+id/label_units"
                android:text="$"
                style="@style/EditorUnitsStyle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <!-- Units for quantity (piece) -->

                <ImageButton
                    android:id="@+id/quantity_increase"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="20dp"
                    android:src="@drawable/plus_quantity_button_image" />

                <ImageButton
                    android:id="@+id/quantity_decrease"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="25dp"
                    android:src="@drawable/minus_quantity_button_image" />

                <EditText
                    android:id="@+id/edit_quantity"
                    style="@style/EditorFieldStyle"
                    android:hint="quantity"
                    android:inputType="number" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
